<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="horizontal"
    tools:context=".usecases.NewGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/trivio_logo_description"
            android:src="@mipmap/ic_logo" />

        <TextView
            android:id="@+id/text_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/chewy"
            android:text="@string/new_game_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_new_game_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/chewy"
            android:text="@string/new_game_question"
            android:textSize="18sp" />

        <Button
            android:id="@+id/continue_game_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/chewy"
            android:text="@string/continue_btn_text" />

        <Button
            android:id="@+id/new_game_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/chewy"
            android:text="@string/new_game_btn_text" />
    </LinearLayout>
</LinearLayout>
